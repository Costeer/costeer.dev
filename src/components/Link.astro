---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
}

const { href, external, underline = true, ...rest } = Astro.props;
---

<a
  href={href}
  target={ external ? "_blank" : "_self" }
  class={cn("inline-block decoration-white/30 hover:decoration-white/50 text-current hover:text-white decoration-sky-500 transition-colors duration-300 ease-in-out", underline && "underline decoration-nothingRed underline-offset-2")}
  {...rest}>
  <slot/>
</a>
